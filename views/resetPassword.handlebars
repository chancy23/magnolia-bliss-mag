<main>
    
    <section>
        <h2>Reset Password Page</h2>
        {{!-- show this seciton first --}}
        <div id='checkCode'>
            <p>Enter your provided reset code</p>
            <form> 
                <label for='resetCode'>
                    Code:
                    <input type='text' name='resetCode' id='resetCode'
                </label>
                
                {{!-- on submit validate if the two passwords match, if they do display 
                success then redirect to home page to login and update our db  --}}
                <button id='submitCode'>Submit</button>
            </form>
        </div>

{{!-- then show this once response comes back as valied --}}
        <div id='changePassword'>
            <p>Enter Your New Password Below</p>
            <form> 
                <label for='newPassword'>
                    New Password
                    <input type='text' name='newPassword' id='newPassword'>
                </label>
                <label for='validateNewPassword'>
                    Re-enter New Password
                    <input type='text' name='validateNewPassword' id='validateNewPassword'>
                </label>
                {{!-- on submit validate if the two passwords match, if they do display 
                success then redirect to home page to login and update our db  --}}
                <button id='submitNewPassword'>Submit</button>
            </form>
        </div>
    </section>
</main>